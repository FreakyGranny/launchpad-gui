apiVersion: v1
kind: Service
metadata:
  name: {{ app_name }}
  annotations:
    router.deis.io/domains: "{{ ssl_domains }}"
    router.deis.io/maintenance: "{{ maintenance | default('false') }}"
    router.deis.io/ssl.enforce: "{{ ssl_enforce | default('false') }}"
  labels:
    router.deis.io/routable: "{{ routable | default("true") }}"
spec:
  type: ClusterIP
  ports:
    - name: http 
      port: 80
      targetPort: {{ app_port }}
  selector:
    app: {{ app_name }}
